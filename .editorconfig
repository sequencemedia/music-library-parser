# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.xsl]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 4 space indentation
indent_style = tab
indent_size = 4

# Unix-style newlines with a newline ending every file
[*.{mjs,cjs,js}]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2
